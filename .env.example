# Production environment variables for Docker Compose
# Copy this to .env and fill in your actual values

# Database
DB_PASSWORD=your_secure_database_password_here

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters_long

# Domain Configuration
CLIENT_URL=https://yourdomain.com

# Instagram API Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_REDIRECT_URI=https://yourdomain.com/api/instagram/oauth/callback
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AI Services
HF_TOKEN=your_huggingface_token
OPENAI_API_KEY=your_openai_api_key_optional

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# Stripe Configuration (Optional - for billing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics (Optional)
SEGMENT_WRITE_KEY=your_segment_write_key