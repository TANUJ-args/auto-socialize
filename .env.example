# Environment Variables Template
# Copy this to .env (root) for frontend and to backend/.env for backend

# Frontend Environment Variables (Root .env file)
VITE_API_URL="http://localhost:5000"
VITE_APP_URL="http://localhost:8080"
# Production values:
# VITE_API_URL="https://socialflow-backend.onrender.com"
# VITE_APP_URL="https://socialflow-frontend.onrender.com"

# Backend Environment Variables (backend/.env file)

# Database (Use Neon PostgreSQL for production)
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# JWT Authentication (Generate a secure 32+ character secret)
JWT_SECRET="your_very_secure_jwt_secret_here_minimum_32_characters_long"

# Server Configuration
NODE_ENV="production"
PORT=5000
CLIENT_URL="https://auto-socialize.vercel.app"

# Instagram OAuth (Multi-User Support - No global token needed)
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"
INSTAGRAM_REDIRECT_URI="https://your-render-service.onrender.com/api/instagram/oauth/callback"

# AI Content Generation (Optional - add when ready)
HF_TOKEN="your_hugging_face_token"
OPENAI_API_KEY="your_openai_api_key"

CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Email Configuration (Optional - for OTP/notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_email_app_password"

# Note: INSTAGRAM_ACCESS_TOKEN removed - now using per-user OAuth tokens
# Each user connects their own Instagram account via /api/instagram/connect
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics (Optional)
SEGMENT_WRITE_KEY=your_segment_write_key